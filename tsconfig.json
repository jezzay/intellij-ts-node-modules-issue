{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "noImplicitReturns": true,
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "packages/**/*.ts"
  ]
}
